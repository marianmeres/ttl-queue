{
	"include": ["src"],
	"compilerOptions": {
		"target": "es6",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"allowJs": true
	}
}
